<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ticketingsystem.activities.HomeActivity$PlaceholderFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:background="@color/blue"
            android:src="@drawable/tab_layout_bg" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/tab_layout_bg"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_my_profile" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/green"
            android:elevation="4dp"
            android:paddingBottom="24dp">
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Username"
                android:textColor="@color/blue"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/profile_layout"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:textSize="16dp"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="@color/green"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"
                    android:layout_weight="0.60"
                    android:id="@+id/textView" />

                <TextView
                    android:id="@+id/profile_first_name"
                    android:textSize="16dp"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColorHint="#181737"
                    android:textColor="@color/blue"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"
                    android:layout_weight="0.37" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:textSize="16dp"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textColor="@color/green"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"
                    android:layout_weight="0.44" />

                <TextView
                    android:id="@+id/profile_last_name"
                    android:textSize="16dp"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:textColorHint="#181737"
                    android:textColor="@color/blue"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:textSize="16dp"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textColor="@color/green"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/profile_balance"
                    android:textSize="16dp"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#1b193b"
                    android:hint="Balance"
                    android:textColor="@color/blue"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>